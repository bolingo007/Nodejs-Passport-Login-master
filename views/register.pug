body
  h2.text-center Qualification pour la Coupe du Monde de Soccer 2022
  br
  .col-md-6.mx-auto 
    .card 
      .card-head 
        h4.card-title.text-center.mt-3= "Créer un compte"
      .card-body
        form(id="formRegister" class="password_Validation" method="POST" action="/register")
          div
            label(for="input_user" class="label_form") Nom d'utilisateur: 
            input(type="string" name="username" id="input_user" class="form-control" placeholder="Nom d'utilisateur" required autofocus)
          br
          div
            label(for="input_password" class="label_form") Mot de passe:
            br 
            input(type="password" name="password" id="input_password" class="password" placeholder="Mot de passe" required)
            p(class="error" id="error")
          p Votre mot de passe doit contenir:
              ul 
                li au moins 8 caractères.
                li au moins une lettre minuscule.
                li au moins une lettre majuscule.
                li au moins un chiffre.
                li au moins un caractère spécial.
          br
          div
            button(type="submit" onClick="validatePassword('input_password','error','formRegister')").btn.btn-success Créer mon compte
      .card-footer
        a(href="/register").btn.btn-primary.mr-4 S'inscrire
        a(href="/").btn.btn-outline-success Retour à l'acceuil


